@model SalesWebMVC.Models.Seller;

@{
    ViewData["Title"] = "Insert new seller";
}

<h2 style="margin-top: 50px; text-align: center;">@ViewData["Title"] </h2>

<hr />

<div class="container" style="display: flex; align-items: center; justify-content: center;">
    <div class="col-md-6">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="control-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="margin-top: 20px;">Send</button>
            </div>
        </form>
    </div>
</div>

